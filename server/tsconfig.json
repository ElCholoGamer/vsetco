{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES6",
		"esModuleInterop": true,
		"strict": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"removeComments": true,
		"sourceMap": true,
		"lib": ["ES2019"],
		"skipLibCheck": true,
		"moduleResolution": "Node",
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
